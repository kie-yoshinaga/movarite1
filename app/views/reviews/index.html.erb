  <div class='main'>

  <%# 画面上部の「あなたが映画の評価をしよう」帯部分 %>
  
  <%# /画面上部の「あなたが映画の評価をしよう」帯部分  %>

  <%# 評価一覧 %>
    <div class='movie-contents'>
      <h2 class='title'>評価が高い映画</h2>
      <div class="subtitle" >
        新規レビュー映画
      </div>
      <ul class='review-lists'>
        <% @reviews.each do |review| %>
          <li class='list'>
            <%= link_to review_path(review.id) do %>
              <div class='review-img-content'>
                <%= image_tag review.image, class: "review-img", size: '185x130' %>
              </div>

              <div class='review-info'>
                <h3 class='review-name'>
                  <%= review.title %>
                </h3>
                <div class='review-genre'>
                  <span><br><%= review.genre.name %></span>
                </div>
                
                <div class="relative-review-rate">
                  <span>評価：</span>
                  <span id="star-rate-<%= review.id %>"></span>
                  <script>
                    $('#star-rate-<%= review.id %>').raty({
                      size: 36,
                      starOff: "<%= asset_path('star-off.png') %>",
                      starOn: "<%= asset_path('star-on.png') %>",
                      starHalf: "<%= asset_path('star-half.png') %>",
                      half: true,   
                      readOnly: true,   
                      score: <%= review.rate %>,   
                    });
                  </script>
                  <%= review.rate %>
                </div>
              </div>
            <% end %>
          </li>
        <% end %>
        
      </ul>

    </div>
    <%# /評価一覧 %>
    
  </div>

